# Environment Variables for Bug Reporter
# Copy this file to .env and fill in your values

# JWT Secret - Generate a strong random secret (32+ characters)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=EXAMPLE-REPLACE-ME-K8sT2nP9vL4mR7wQ3xY6zA1bC5dE8fG0h

# Admin email for the default admin user
ADMIN_EMAIL=admin@example.com

# API URL - Use localhost for development, your production URL for builds
VITE_API_URL=http://localhost:8787

# R2 Bucket name for file uploads (optional, for production)
R2_BUCKET_NAME=bug-reporter-uploads

# R2 Public Base URL for file access (required for production)
# Format: https://pub-<ACCOUNT_ID>.r2.dev/<BUCKET_NAME>
R2_PUBLIC_BASE_URL=https://pub-your-account-id.r2.dev/bug-reporter-uploads

# CORS Origins (comma-separated for production)
CORS_ORIGINS=http://localhost:5173,https://your-domain.com

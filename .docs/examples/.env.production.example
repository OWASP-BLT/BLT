# ============================================================================
# BLT Production Environment Configuration
# ============================================================================
# ⚠️ TEMPLATE ONLY - FOR MAINTAINER USE
# This file serves as a template for production deployments (maintainer-owned).
# Maintainers: Copy this to .env on production server and fill in actual values.
# Contributors: Use this as reference for understanding required environment variables.
# ⚠️ NEVER commit the actual .env file with real credentials to version control.

# ============================================
# Core Django Settings
# ============================================
SECRET_KEY=your-secret-key-here-generate-using-django-get-random-secret-key
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-vps-ip
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Domain Configuration
DOMAIN=yourdomain.com
FQDN=https://yourdomain.com

# ============================================
# Security Settings (Production)
# ============================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# ============================================
# Localization
# ============================================
TIME_ZONE=UTC
LANGUAGE_CODE=en-us
USE_I18N=True
USE_TZ=True

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string (note: use postgresql:// not postgres://)
DATABASE_URL=postgresql://blt_user:your_db_password@localhost:5432/blt_db

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Static and Media Files
# ============================================
STATIC_URL=/static/
STATIC_ROOT=/var/www/blt/static
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/blt/media

# Cloud Storage (Alternative to local storage)
# Uncomment if using AWS S3
# USE_S3=True
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your_bucket_name.s3.amazonaws.com

# ============================================
# Email Configuration
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# ============================================
# Application Release Information
# ============================================
APP_VERSION=1.0.0
RELEASE_STAGE=production

# ============================================
# CORS Configuration (if API endpoints are exposed)
# ============================================
# Uncomment if you have frontend apps on different domains
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# CORS_ALLOW_CREDENTIALS=True

# ============================================
# Health Checks and Monitoring
# ============================================
HEALTH_CHECK_URL=/health/
HEALTH_CHECK_ENABLED=True

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/blt

# ============================================
# Server Configuration
# ============================================
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=30

# ============================================
# OAuth Configuration
# ============================================
# GitHub OAuth
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Google Cloud Storage (if using GCS for media/static files)
# GS_BUCKET_NAME=your-gcs-bucket-name
# GS_PROJECT_ID=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================
# AI/ML Integration
# ============================================
# OpenAI API (if using AI features)
OPENAI_API_KEY=your-openai-api-key

# ============================================
# Bitcoin/ORD Server Configuration (OPTIONAL)
# ============================================
# ⚠️ WARNING: Only enable if you're running blockchain features
# ⚠️ Ensure strong authentication and firewall rules
# ⚠️ Never expose RPC endpoints to the public internet
BTC_RPC_HOST=localhost
BTC_RPC_PORT=8332
# BTC_RPC_USER=your_rpc_username  # Required if enabled
# BTC_RPC_PASSWORD=your_strong_rpc_password  # Required if enabled
ORD_SERVER_URL=http://localhost:8080

# ============================================
# Caching Configuration
# ============================================
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://localhost:6379/1
CACHE_TTL=3600

# ============================================
# Session Configuration
# ============================================
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default
SESSION_COOKIE_AGE=1209600
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ============================================
# Admin Configuration
# ============================================
# Customize admin URL for security (change from default /admin/)
ADMIN_URL=custom-admin-url/

# ============================================
# Monitoring and Error Tracking
# ============================================
# Sentry DSN (for error tracking)
SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# ============================================
# Additional Security
# ============================================
# CSRF and Security Middleware
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Lax
X_FRAME_OPTIONS=DENY
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# ============================================
# Notes
# ============================================
# 1. Replace all placeholder values (your-*, localhost, etc.) with actual production values
# 2. Generate SECRET_KEY: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# 3. Set file permissions: chmod 600 .env
# 4. Never commit this file to version control (add .env to .gitignore)
# 5. For optional services (Bitcoin RPC, S3, etc.), uncomment and configure only if needed
# 6. Backup this file securely and include in disaster recovery procedures

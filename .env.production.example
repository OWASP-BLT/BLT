============================================================================
# BLT Production Environment Configuration
# ============================================================================
# This file serves as a template for production deployments.
# Copy this to .env and fill in actual values. Never commit the actual .env file.

# ============================================================================
# Core Django Settings
# ============================================================================
SECRET_KEY=your-secret-key-here-generate-new-one
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Domain configuration
DOMAIN=yourdomain.com
DOMAIN_NAME=https://yourdomain.com

# ============================================================================
# Security Settings (Production)
# ============================================================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL database URL (use postgresql:// scheme, not postgres://)
DATABASE_URL=postgresql://blt_user:your_db_password@localhost:5432/blt_db

# ============================================================================
# Redis Configuration
# ============================================================================
# Redis URL for Django Channels and Tasks
REDIS_URL=redis://localhost:6379/0

# Alternative: Redis Cloud (if using a managed Redis service)
# REDISCLOUD_URL=redis://user:password@redis-cloud-host:port/0

# ============================================================================
# Localization
# ============================================================================
TIME_ZONE=UTC
LANGUAGE_CODE=en-us
USE_I18N=True
USE_TZ=True

# ============================================================================
# Static and Media Files
# ============================================================================
STATIC_URL=/static/
STATIC_ROOT=/var/www/blt/static
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/blt/media

# Cloud Storage (Alternative to local storage)
# Uncomment if using AWS S3
# USE_S3=True
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your_bucket_name.s3.amazonaws.com

# ============================================================================
# Email Configuration
# ============================================================================
# Email backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Default from email
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# Admin email credentials
# ⚠️ SECURITY: Use app-specific passwords or OAuth2, not regular passwords
# For Gmail: https://support.google.com/accounts/answer/185833
EMAIL_HOST_USER=admin@yourdomain.com
# EMAIL_HOST_PASSWORD=your-app-specific-password

# Report email (for bug reports)
# ⚠️ SECURITY: Use app-specific password or OAuth2 token
REPORT_EMAIL=reports@yourdomain.com
# REPORT_APP_PASSWORD=your-app-specific-password
# Or integrate with your email service API directly

# ============================================================================
# Server Configuration
# ============================================================================
# Application release version (for Sentry releases and tracking)
APP_RELEASE_VERSION=v1.0.0

# ============================================================================
# CORS Configuration (if API endpoints are exposed)
# ============================================================================
# Uncomment if you have frontend apps on different domains
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# CORS_ALLOW_CREDENTIALS=True

# ============================================================================
# Health Checks and Monitoring
# ============================================================================
HEALTH_CHECK_URL=/health/
HEALTH_CHECK_ENABLED=True

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/blt

# ============================================================================
# GitHub OAuth Configuration
# ============================================================================
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ============================================================================
# Google Cloud Storage (Optional)
# ============================================================================
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# GCS_BUCKET_NAME=your_bucket_name

# ============================================================================
# AI/ML Service Integration (Optional)
# ============================================================================
# OpenAI API
# OPENAI_API_KEY=your_openai_api_key

# Anthropic API
# ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================================================
# Monitoring and Error Tracking
# ============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=your_sentry_dsn
# SENTRY_ENVIRONMENT=production

# ============================================================================
# Bitcoin/ORD Server Configuration (OPTIONAL)
# ============================================================================
# ⚠️ WARNING: Only enable if you're running blockchain features
# ⚠️ Ensure strong authentication and firewall rules
# ⚠️ Never expose RPC endpoints to the public internet
BTC_RPC_HOST=localhost
BTC_RPC_PORT=8332
# BTC_RPC_USER=your_rpc_username
# BTC_RPC_PASSWORD=your_strong_rpc_password
ORD_SERVER_URL=http://localhost:8080

# ============================================================================
# Cache Configuration
# ============================================================================
# Cache backend (using Redis)
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://localhost:6379/1

# ============================================================================
# Session Configuration
# ============================================================================
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default

# ============================================================================
# Additional Production Settings
# ============================================================================
# Admin URL customization (change for security)
ADMIN_URL=custom-admin-url/

# Logging level
LOG_LEVEL=INFO

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 1. Always set file permissions: chmod 600 .env
# 2. Never commit this file with actual credentials to version control
# 3. Use secrets management services for sensitive data in production
# 4. Rotate credentials regularly
# 5. Use app-specific passwords or OAuth2 for email services
# 6. Keep SECRET_KEY truly secret and randomly generated
# 7. Review and update ALLOWED_HOSTS and CSRF_TRUSTED_ORIGINS carefully

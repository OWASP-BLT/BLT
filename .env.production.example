# =============================================================================
# BLT Production Environment Configuration
# =============================================================================

# ----------------------------------------------------------------------------
# Core Django Settings
# ----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here-generate-with-django-get-secret-key
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Domain Configuration
FQDN=https://yourdomain.com
DOMAIN_NAME_PREVIOUS=BLT
STAGING_DOMAIN=staging.yourdomain.com
PRODUCTION_DOMAIN=yourdomain.com
ENABLE_STAGING_REDIRECT=False

# Admin URL (change from default 'admin' for security)
ADMIN_URL=admin

# Email Configuration
FROM_EMAIL=blt-support@yourdomain.com
DEFAULT_FROM_EMAIL=blt-support@yourdomain.com
SERVER_EMAIL=blt-support@yourdomain.com

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# PostgreSQL connection URL
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://blt_user:your_db_password@localhost:5432/blt_db

# ----------------------------------------------------------------------------
# Redis Configuration
# ----------------------------------------------------------------------------
# Redis URL for Django Channels and Tasks
REDIS_URL=redis://localhost:6379/0
REDISCLOUD_URL=redis://localhost:6379/0

# ----------------------------------------------------------------------------
# GitHub Integration (Required for auth and webhook)
# ----------------------------------------------------------------------------
# Create OAuth app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Create personal access token at: https://github.com/settings/tokens
# Required scopes: repo, read:org, user:email
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Webhook secret for GitHub webhooks
# Generate with: python -c 'import secrets; print(secrets.token_hex(32))'
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# ----------------------------------------------------------------------------
# Email/SMTP Configuration
# ----------------------------------------------------------------------------
# SendGrid (recommended for production)
SENDGRID_USERNAME=your_sendgrid_username
SENDGRID_PASSWORD=your_sendgrid_password

# Alternative: Generic SMTP
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your_email@example.com
# EMAIL_HOST_PASSWORD=your_email_password

# Report email (for bug reports)
REPORT_EMAIL=reports@yourdomain.com
REPORT_PASSWORD=report_email_password

# ----------------------------------------------------------------------------
# Monitoring & Error Tracking (Optional)
# ----------------------------------------------------------------------------
# Sentry DSN for error tracking
# Get from: https://sentry.io/
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Heroku release version (for Sentry releases)
HEROKU_RELEASE_VERSION=v1.0.0

# Scout APM (Optional - Application Performance Monitoring)
# SCOUT_KEY=your_scout_key

# ----------------------------------------------------------------------------
# AI Integration (Optional)
# ----------------------------------------------------------------------------
# OpenAI API key for AI features
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key

# ----------------------------------------------------------------------------
# Social Media Integration (Optional)
# ----------------------------------------------------------------------------
# Twitter/X API credentials
BEARER_TOKEN=your_twitter_bearer_token
APP_KEY=your_twitter_app_key
APP_KEY_SECRET=your_twitter_app_secret
ACCESS_TOKEN=your_twitter_access_token
ACCESS_TOKEN_SECRET=your_twitter_access_secret

# ----------------------------------------------------------------------------
# Discord Bot (Optional)
# ----------------------------------------------------------------------------
DISCORD_BOT_TOKEN=your_discord_bot_token

# ----------------------------------------------------------------------------
# Google Cloud Storage (Optional)
# ----------------------------------------------------------------------------
# For media file storage
# GOOGLE_CREDENTIALS={"type":"service_account","project_id":"..."}

# ----------------------------------------------------------------------------
# Blockchain/Bitcoin (Optional)
# ----------------------------------------------------------------------------
BITCOIN_RPC_USER=yourusername
BITCOIN_RPC_PASSWORD=yourpassword
BITCOIN_RPC_HOST=localhost
BITCOIN_RPC_PORT=8332

# ORD Server (Bitcoin Ordinals)
ORD_SERVER_URL=http://localhost:9001

# ----------------------------------------------------------------------------
# External APIs (Optional)
# ----------------------------------------------------------------------------
# USPTO Trademark API
USPTO_API=your_uspto_api_key

# ----------------------------------------------------------------------------
# Social URLs
# ----------------------------------------------------------------------------
BLOG_URL=https://yourdomain.com/blog/
FACEBOOK_URL=https://www.facebook.com/groups/yourgroup/
TWITTER_URL=https://x.com/your_handle
GITHUB_URL=https://github.com/OWASP-BLT/BLT
EXTENSION_URL=https://github.com/OWASP-BLT/BLT-Extension

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
PORT=8000

# ----------------------------------------------------------------------------
# Caching (Optional - if using Memcached)
# ----------------------------------------------------------------------------
# MEMCACHIER_SERVERS=server1:11211,server2:11211
# MEMCACHIER_USERNAME=your_username
# MEMCACHIER_PASSWORD=your_password
